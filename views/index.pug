extends layout

block content
    .container-fluid
        .row
            .container
                .jumbotron
                    h1 #{title} - Know Your Content
        .row
            .col
                .container-fluid
                    //h4 Home
                    //ul.nav.flex-column
                        li.nav-item
                            a.nav-link(href='#') Images
                        li.nav-item
                            a.nav-link(href='/album') Music
                        li.nav-item
                            a.nav-link(href='#') Videos
                        li.nav-item
                            a.nav-link(href='#') Work
            .col-sm-9
                .container-fluid
                    //-.jumbotron
                        h1 #{title} - Know Your Content
                    //nav.navbar.navbar-expand-sm.bg-dark.navbar-dark
                        form.form-inline(action='/analyze')
                            input.form-control.mr-sm-4(type='text', placeholder='C:/media')
                            button.btn.btn-success(type='submit') Analyze
                    p
                    .card-deck
                        .card.bg-primary
                            .card-body.text-center
                                //h2.card-text Images
                                a.nav-link(href='/photos')
                                    img(src='/images/photo.png', alt='Music', width='70', height='70')
                                p
                                p.card-text Number of Pictures: 0
                                p.card-text Number of Pictures: 0
                                p.card-text Number of Pictures: 0
                                p.card-text Number of Pictures: 0
                        .card.bg-warning
                            .card-body.text-center
                                //h2.card-text Music
                                a.nav-link(href='/music')
                                    img(src='/images/music.png', alt='Music', width='70', height='70')
                                p
                                p.card-text Number of Songs: #{mediaCount}
                                p.card-text
                                    a.nav-link(href='/album') Number of Albums: #{nAlbums}
                                p.card-text Albums with few songs: 0
                                p.card-text Number of Artists: 0
                        .card.bg-success
                            .card-body.text-center
                                //h2.card-text Videos
                                a.nav-link(href='/videos')
                                    img(src='/images/video.png', alt='Music', width='70', height='70')
                                p
                                p.card-text Number of Movies: 0
                                p.card-text Number of Movies: 0
                                p.card-text Number of Movies: 0
                                p.card-text Number of Movies: 0
                        .card.bg-danger
                            .card-body.text-center
                                //h2.card-text Work
                                a.nav-link(href='/work')
                                    img(src='/images/work.png', alt='Music', width='70', height='70')
                                p
                                p.card-text Number of Text Files: 0
                                p.card-text Number of Spreadsheets: 0
                                p.card-text Number of Presentations: 0
                                p.card-text Number of files: 0


                    //- button.btn.btn-primary(type='submit') Organize Albums
                      button.btn.btn-primary(type='submit') Create Playlist
                    //- p.bg-danger.text-white TODO Toggle by decade, genre, mood


                    //-h2 Analyze
                    //-form(method='POST' action='/ingest')
                      div.form-group
                        label(for='folderPath') Folder path:
                        input#folderPath.form-control(type='text', placeholder='C:/media' name='folderPath')
                      button.btn.btn-primary(type='submit') Analyze
            .col